@model ZumraModel.CategoryVm
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container zm-container">

    <section class="row zm-upper-offers">
        <article class="col-xs-4">
            <div>
                <img src="/img/organic-natural.png" alt="Offers" title="Offers">

                <a href="">ORGANIC <br> NATURAL</a>
            </div>
        </article>

        <article class="col-xs-4">
            <div>
                <img src="/img/offer-2.png" alt="Offers" title="Offers">

                <a href="">
                    END OF SEASON <br>
                    <span>SALE</span>
                </a>
            </div>
        </article>

        <article class="col-xs-4">
            <div>
                <img src="/img/offer-3.png" alt="Offers" title="Offers">

                <a href="">
                    SALE OFF UPTO <br>
                    <span>50%</span>
                </a>
            </div>
        </article>
    </section>
    @if (Model.ID > 0)
    {
        <section class="row zm-cat-cover">
            <div class="col-lg-12 padding-zero">
                <img src="/img/cat-cover.jpg" alt="Category Name" title="Category Name" class="img-responsive">

                <h1>@Model.TitleEN</h1>
            </div>
        </section>

        <section class="row zm-items-group">
            <article class="col-lg-12 zm-cat-details">
                <div class="row">
                    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                        <a href="">
                            <img src="/img/inner-logo.png" alt="Zumra" title="Zumra" class="img-responsiv">
                        </a>
                    </div>

                    <div class="col-lg-8 col-md-8 col-sm-7 col-xs-7  route">
                        <a href="/">HOME</a>

                        <i class="fa fa-chevron-right"></i>

                        <a href="/Category/@Model.ID">@Model.TitleEN</a>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-4 form-group sort">
                        <span>SORT BY</span>

                        <select class="form-control" name="category-sort" id="">
                            <option value="popular">Popular</option>
                            <option value="ascending">Ascending</option>
                            <option value="descending">Descending</option>
                        </select>

                    </div>
                </div>
            </article>

            @if (Model.Products != null)
            {
                foreach (var item in Model.Products)
                {
                    <article class="col-lg-3 col-md-4 col-sm-6 col-xs-6 zm-item-card">
                        <div class="row photo">
                            <span>NEW</span>

                            <a href="">
                                <img src="/img/slider-img.png" alt="">
                            </a>
                        </div>

                        <div class="row title text-center">
                            <a href="">
                                @item.TitleEN
                            </a>
                        </div>

                        <div class="row shop">
                            <span>@item.SalePrice L.E</span>

                            <a href="">
                                <i class="fa fa-shopping-cart"></i>
                                SHOP NOW
                            </a>
                        </div>
                    </article>
                }
            }

        </section>

        <section class="row zm-newsletter">
            <img src="/img/news-bck-left.png" alt="Contact Zumra" title="Contact Zumra" class="pull-left img-responsive">

            <div class="text-center">
                <h3>Sign up for news & Get 15% Off</h3>

                <span>Subscribe to zumra food mailling list to receive updates on <br> now arrvals, special offers an other discount information</span>

                <div class="form-group">
                    <div class="col-xs-8">
                        <input type="email" class="form-control" id="Newsletter-Email" placeholder="Enter Your Email">
                    </div>

                    <div class="col-xs-4">
                        <button type="submit" class="form-control btn btn-danger">SUBSCRIBE</button>
                    </div>
                </div>
            </div>

            <img src="/img/news-bck-rightt.png" alt="Contact Zumra" title="Contact Zumra" class="pull-right img-responsive">
        </section>
    }
</main>
